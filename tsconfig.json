{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/renderer/src/*"
      ],
      "@common": ["src/renderer/src/common/index"],
      "@common/*": ["src/renderer/src/common/*", "src/renderer/src/common/index"],
    },
  },
  "include": ["src/renderer", "src/far", "postcss.config.js", "tailwind.config.js", "src/far.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}